<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MobileMainProject.Infrastructure.CustomControls.CustomIntStepper">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>

        <Button x:Name="XamlStepperMinusButton" Text="-" Style="{StaticResource TinyTextButtonStyle}"/>
        <Label x:Name="XamlStepperLabel" Grid.Column="1" VerticalOptions="Center" HorizontalOptions="Center" FontSize="20"/>
        <Button x:Name="XamlStepperAddButton" Grid.Column="2" Text="+" Style="{StaticResource TinyTextButtonStyle}"/>
    </Grid>
    
</ContentView>